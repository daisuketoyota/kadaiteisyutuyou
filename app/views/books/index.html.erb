

  <h1>Books</h1>
  <table width='750'>
  <thead>
    <th width='200'>Title</th>
    <th width='400'>Body</th>
    <th colspan="3" width='150'></th>
  </thead>
  <tr>
  <% @books.each do |book| %>
  　<td><span><%= book.title %></span></td>
  　<td><span><%= book.body %></span></td>
  　<td><span><%= link_to 'Show',book_path(book.id) %></span></td>
  　<td><span><%= link_to 'Edit',edit_book_path(book.id)%></span></td>
  　<td><span><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></span></td>
  </tr>
  <% end %>
  </table>


  <h2>New Books</h2>
  <% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>

  <%= form_with model: @book, method: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Body</h4>
  <%= f.text_area:body %>
	
	<h5>
  <%= f.submit 'Create Book' %>
  <% end %>
